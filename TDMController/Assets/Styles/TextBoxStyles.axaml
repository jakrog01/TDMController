<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Design.PreviewWith>
		
		<Border Padding="20">
				<TextBox Classes="infoTextBlock" Height="50"> 150 </TextBox>
		</Border>
	</Design.PreviewWith>

	<Style Selector="TextBox.infoTextBlock">
		<Setter Property="Background" Value="#0E1414"/>
		<Setter Property="Width" Value="90"/>
		<Setter Property="Height" Value="45"/>
		<Setter Property="Foreground" Value="#627888"/>
		<Setter Property="FontFamily" Value="Segoe"/>
		<Setter Property="FontSize" Value="30"/>
		<Setter Property="TextAlignment" Value="Center"/>
		<Setter Property="VerticalAlignment" Value="Center"/>
		<Setter Property="VerticalContentAlignment" Value="Center"/>
		<Setter Property="Padding" Value="0"/>
		<Setter Property="BorderBrush" Value="#00B394"/>
		<Setter Property="BorderThickness" Value="1"/>
		<Setter Property="CornerRadius" Value="5"/>
	</Style>
</Styles>